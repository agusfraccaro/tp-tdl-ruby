<div style="display: flex">
    <h1> Recetas </h1>
    <%= button_to " + ", new_recipe_path, method: :get, class: "btn btn-secondary" %>
</div>

<div class="table-responsive">
    <table class="table table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th class="text-center img-columns"></th>
                <th class="text-center nombre-columns">Nombre</th>
                <th class="text-center descripcion-columns">Descripci√≥n</th>
            </tr>
        </thead>
        <tbody>
            <% @recipes.each do |recipe| %>
                <tr> 
                    <td> <image src="<%= url_for(recipe.image) %>" height=100> </td>
                    <td> <%= recipe.nombre %> </td>
                    <td> <%= recipe.descripcion %> </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

