<div class="row col-sm-12">
    <div class="col-sm-6">
        <div class="card" style="width: 18rem;">
            <image src="<%= url_for(@recipe.image) %>" >
            <div class="card-body">
                <h5 class="card-title"> <%= @recipe.nombre %> </h5>
                <p class="card-text"> <%= @recipe.content %> </p>
            </div>
        </div>

        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#comentario_modal">
            Comentar
        </button>
    </div>

    <div class="col-sm-6">
        <h3>Comentarios: </h3>
        <% @recipe.comments.each do |comment| %>
            <ul class="list-group" >
                <%= render 'comments/comment', comment: comment %>
            </ul>
        <% end %>
    </div>
</div>

<%= render 'comments/add_comment', recipe: @recipe %>
