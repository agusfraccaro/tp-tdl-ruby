<div class="row m-0 justify-content-center align-items-center">
    <div class="col-md-6 col-auto p-5">  
        <h1> Nueva Receta</h1>
        <%= form_with model: @recipe, url: new_recipe_path do |form| %> 
            <%= render "layouts/msj_errores", form: form %>
            
            <div class="mb-3">
                <%= form.label :nombre, "Nombre de la Receta" %>
                <%= form.text_field :nombre, class:"form-control" %>
            </div>

            <div class="mb-3">
                <%= form.label :content, "Paso a paso" %>
                <%= form.rich_text_area :content, class:"form-control" %>
            </div>

            <div class="mb-3">
                <%= form.label :image, "Foto de la Receta" %>
                <%= form.file_field :image, accept:"image/jpg, image/jpeg" %>
            </div>
            
            <%= form.button "Crear receta", method: :post, class: "btn btn-primary" %>
        <% end %>
    </div>
</div>