<div class="row m-0 justify-content-center align-items-center">
    <div class="col-md-6 col-auto p-5">  
        <h1> Editar Receta</h1>
        <%= form_with model: @recipe, url: edit_recipe_path do |form| %> 
            <%= render "layouts/msj_errores", form: form %>
            
            <div class="mb-3">
                <%= form.label :nombre, "Nombre de la Receta" %>
                <%= form.text_field :nombre, class:"form-control" %>
            </div>

            <div class="mb-3">
                <%= form.label :descripcion, "Paso a paso" %>
                <%= form.text_area :descripcion, class:"form-control" %>
            </div>

            <div class="mb-3">
                <%= form.label :image, "Foto de la Receta" %>
                <%= form.file_field :image, accept:"image/jpg, image/jpeg" %>
            </div>
            
            <%= form.submit "Guardar cambios", class: "btn btn-primary" %>
            <%= link_to "Cancelar", recipe_index_path, method: :get, class:"btn btn-danger" %>
        <% end %>
        
    </div>
</div>